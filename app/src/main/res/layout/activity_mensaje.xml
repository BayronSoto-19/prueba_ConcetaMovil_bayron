<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.mensaje">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPerfilUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perfil de Usuario"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnListarUsuarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listar Usuarios"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnModificarUsuarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modificar Usuarios"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnMensajeria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MensajerÃ­a"
                android:layout_marginTop="16dp"/>

            <ListView
                android:id="@+id/lv_datosUsuarios2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/btnMensajeria"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
